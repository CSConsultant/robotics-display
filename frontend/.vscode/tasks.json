{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Robotics Scoring App",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^\\s*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Server running at.*",
          "endsPattern": "^.*Server running at.*"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start with nodemon (Development)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^\\s*$"
        }
      }
    }
  ]
}
