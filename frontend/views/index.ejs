<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Competition Timer</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <!-- Header with Logo -->
    <header class="header">
      <img src="/robot.png" alt="Robot Logo" class="logo">
      <h1>Robotics Competition Timer</h1>
    </header>

    <!-- Tabs -->
    <div class="tabs">
      <button class="tab-button active" data-tab="fll">FIRST LEGO League</button>
      <button class="tab-button" data-tab="robofest">Robofest</button>
    </div>

    <!-- Main Timer Section -->
    <div class="timer-container">
      <div class="timer-display">
        <div id="timerValue" class="timer-text">05:00</div>
      </div>

      <!-- Input Section -->
      <div class="input-section">
        <input type="number" id="minutes" placeholder="Minutes" value="5" min="0" max="60">
        <span>:</span>
        <input type="number" id="seconds" placeholder="Seconds" value="0" min="0" max="59">
        <button id="setTimeBtn" class="btn btn-primary">Set Time</button>
      </div>

      <!-- Control Buttons -->
      <div class="controls">
        <button id="startBtn" class="btn btn-success">Start</button>
        <button id="pauseBtn" class="btn btn-warning">Pause</button>
        <button id="stopBtn" class="btn btn-danger">Stop</button>
      </div>
    </div>

    <!-- Teams Section -->
    <div class="teams-section">
      <div class="section-header">
        <h2 id="competitionTitle">FIRST LEGO League Teams</h2>
        <a href="/add-team" class="btn btn-add">+ Add Team</a>
      </div>
      <div id="teamsContainer" class="teams-grid"></div>
    </div>
  </div>

  <!-- Audio element for timer completion sound -->
  <audio id="timerAudio" preload="auto">
    <source src="/timer-sound.mp3" type="audio/mpeg">
  </audio>

  <script src="/timer.js"></script>
</body>
</html>
